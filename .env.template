# ==========================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ==========================================
# Copy this file to .env and fill with your actual values

# ==========================================
# APPLICATION
# ==========================================
NODE_ENV=development
# NODE_ENV=production

# ==========================================
# MONGODB
# ==========================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=userdb

# ==========================================
# RABBITMQ
# ==========================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123

# ==========================================
# MICROSOFT ENTRA ID (CRITICAL - REQUISITO #1)
# ==========================================
# Get these from Azure Portal > App Registrations
ENTRA_CLIENT_ID=your-client-id-here
ENTRA_TENANT_ID=your-tenant-id-here
ENTRA_CLIENT_SECRET=your-client-secret-here
ENTRA_REDIRECT_URI=http://localhost:8000/auth/callback

# ==========================================
# LLM / RAG
# ==========================================
# OpenRouter API Key for LLM
OPENROUTER_API_KEY=your-openrouter-api-key-here
LLM_MODEL=meta-llama/llama-3.2-3b-instruct:free

# ==========================================
# AZURE BLOB STORAGE (Optional - for photos)
# ==========================================
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string

# ==========================================
# CORS ALLOWED ORIGINS
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
